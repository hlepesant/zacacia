{% extends "ZacaciaBundle::layout.html.twig" %}

{% block title %}ZacaciaBundle:Server:new{% endblock %}

{% block navmenu %}
<li><a href="{{ path('_dashboard') }}">Dashboard</a></li>
<li><a href="{{ path('_platform') }}">Platform</a></li>
<li class="active"><a href="#">Customer : edit</a></li>
{% endblock %}

{% block whereiam %}
<ul class="list-inline">
  <li><h3 class="warning">{{ platform.cn }}</a></h3><small>Platform</small></li>
  <li><h3 class="warning">{{ organization.cn }}</a></h3><small>Customer:Edit</small></li>
</ul>
{% endblock %}

{% block content %}

{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row">
    <div class="col-md-12">
	    <fieldset class="form-group">
	    	{{  form_label(form.cn) }}
	    	{{ form_errors(form.cn) }}
	    	{{ form_widget(form.cn, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
	    </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
	    <fieldset class="form-group">
	    	{{  form_label(form.zarafahidden) }}
	    	{{ form_errors(form.zarafahidden) }}
	    	{{ form_widget(form.zarafahidden, {'attr': {'class': 'form-control'}}) }}
	    </fieldset>
    </div>

    <div class="col-md-6">
	    <fieldset class="form-group">
	    	{{  form_label(form.zarafaaccount) }}
	    	{{ form_errors(form.zarafaaccount) }}
	    	{{ form_widget(form.zarafaaccount, {'attr': {'class': 'form-control'}}) }}
	    </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
	    <fieldset class="form-group">
	    	{{  form_label(form.zacaciastatus) }}
	    	{{ form_errors(form.zacaciastatus) }}
	    	{{ form_widget(form.zacaciastatus, {'attr': {'class': 'form-control'}}) }}
	    </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
	    <fieldset class="form-group">
            <button type="button" id="form_cancel" class="btn btn-primary">{% trans %}Cancel{% endtrans %}</button>
            <button type="submit" id="form_save" class="btn btn-primary">{% trans %}Save Customer{% endtrans %}</button>
	    </fieldset>
    </div>
</div>

{{ form_end(form) }}

{% endblock %}

{% block zavascripts %}
<script src= "{{ asset('js/organization/edit.js') }}"></script>
<script>
var cancel_redirect = "{{ path('_organization', { 'platformid': platform.entryUUID }) }}"
</script>
{% endblock %}
