{% extends "ZacaciaBundle::layout.html.twig" %}

{% block title %}ZacaciaBundle:Platform:index{% endblock %}

{% block navmenu %}
<li><a href="{{ path('_dashboard') }}">Dashboard</a></li>
<li class="active"><a href="#">Platforms</a><span class="sr-only">(current)</span></li>
{% endblock %}

{% block content %}
<h2 class="page-header">Platforms</h2>

<div class="table-responsive">

<a href="{{ path('_platform_new') }}">New</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Created</th>
      <th>Modified</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
{% for platform in platforms %}
    <tr>
      <td>{{ platform.cn }}</td>
      <td class="{{ platform.zacaciaStatus | lower}}">{{ platform.zacaciaStatus }}</td>
      <td>{{ platform.createTimestamp }}</td>
      <td>{{ platform.modifyTimestamp }}</td>
      <td>
        <a href="{{ path('_server', {'platform' : platform.entryUUID} ) }}">Server</a> | 
        <a href="{{ path('_customer', {'platform' : platform.entryUUID} ) }}">Customer</a>
      </td>
      <td>
        <a href="{{ path('_platform_edit', {'uuid' : platform.entryUUID} ) }}">Edit</a> | 
        <a class="delete_platform" href="{{ path('_platform_delete', {'uuid' : platform.entryUUID} ) }}">Delete</a>
      </td>
    </tr>
{% endfor %}
  </tbody>
</table>
</div>
{% endblock %}

{% block zavascripts %}
<script src= "{{ asset('js/platform/index.js') }}"></script>
{% endblock %}
