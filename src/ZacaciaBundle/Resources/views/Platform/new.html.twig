{% extends "ZacaciaBundle::layout.html.twig" %}

{% block title %}ZacaciaBundle:Platform:new{% endblock %}

{% block navmenu %}
<li><a href="{{ path('_dashboard') }}">Dashboard</a></li>
<li class="active"><a href="#">Platform &rarr; New</a></li>
{% endblock %}

{% block content %}
<h2 class="page-header">Platform &rarr; New</h2>

<div class="table-responsive">

{{ form_start(form) }}
	 {{ form_errors(form) }}

	<fieldset class="form-group">
		{{ form_label(form.cn) }}
		{{ form_errors(form.cn) }}
		{{ form_widget(form.cn, {'attr': {'class': 'form-control'}}) }}
	</fieldset>

	<fieldset class="form-group">
		{{ form_label(form.zacaciastatus) }}
		{{ form_errors(form.zacaciastatus) }}
		{{ form_widget(form.zacaciastatus, {'attr': {'class': 'form-control'}}) }}
	</fieldset>

	<fieldset class="form-group">
        {{ form_widget(form.cancel, {'attr': {'class':  'btn btn-primary' }}) }}
		{{ form_widget(form.save, {'attr': {'class':  'btn btn-primary'}}) }}
	</fieldset>

{{ form_end(form) }}

</div>
{% endblock %}

{% block zavascripts %}
<script src= "{{ asset('js/platform/new.js') }}"></script>
<script>
var cancel_redirect = "{{ path('_platform') }}"
</script>
{% endblock %}
