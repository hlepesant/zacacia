{% extends "ZacaciaBundle::layout.html.twig" %}

{% block title %}ZacaciaBundle:User:Password{% endblock %}

{% block navmenu %}
<li><a href="{{ path('_dashboard') }}">Dashboard</a></li>
<li><a href="{{ path('_platform') }}">Platform</a></li>
<li><a href="{{ path('_organization', {'platformid' : platform.entryUUID} ) }}">Customer</a></li>
<li class="active"><a href="#">User : Password</a></li>
{% endblock %}

{% block whereiam %}
<ul class="list-inline">
    <li><h3 class="warning">{{ platform.cn }}</h3><small>Platform</small></li>
    <li><h3 class="warning">{{ organization.cn }}</h3><small>Customer</small></li>
    <li><h3 class="warning">{{ user.cn }}</h3><small>Password</small></li>
</ul>
{% endblock %}

{% block content %}

{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row">
    <div class="col-md-12">
	    <fieldset class="form-group">
	    	{{  form_label(form.displayname, '', {'label_attr': {'class': 'control-label', 'for': form.displayname.vars.id}}) }}
	    	{{ form_errors(form.displayname) }}
	    	{{ form_widget(form.displayname, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
	    </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
	    <fieldset class="form-group">
	    	{{  form_label(form.userpassword, '', {'label_attr': {'class': 'control-label', 'for': form.userpassword.vars.id}}) }}
	    	{{ form_errors(form.userpassword) }}
	    	{{ form_widget(form.userpassword, {'attr': {'class': 'form-control'}}) }}
	    </fieldset>
    </div>

    <div class="col-md-6">
	    <fieldset class="form-group">
	    	{{  form_label(form.confpass, '', {'label_attr': {'class': 'control-label', 'for': form.confpass.vars.id}}) }}
	    	{{ form_errors(form.confpass) }}
	    	{{ form_widget(form.confpass, {'attr': {'class': 'form-control'}}) }}
	    </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
	    <fieldset class="form-group">
            <button type="button" id="form_cancel" class="btn btn-primary">{% trans %}Cancel{% endtrans %}</button>
            <button type="submit" id="form_save" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
	    </fieldset>
    </div>
</div>


{{ form_end(form) }}
{% endblock %}

{% block zavascripts %}
<script src= "{{ asset('js/user/password.js') }}"></script>
<script>
var cancel_redirect = "{{ path('_user', { 
    'platformid': platform.entryUUID,
    'organizationid': organization.entryUUID,
}) }}"
</script>
{% endblock %}
