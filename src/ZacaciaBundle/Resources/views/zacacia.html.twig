<!DOCTYPE html>
<html lang="fr" ng-app="zacaciaApp">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="{{ asset('bundles/zacacia/vendor/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/zacacia/css/zacacia.css') }}" />
        {% block stylesheets %}{% endblock %}
        <script src="{{ asset('bundles/zacacia/vendor/angular/angular.min.js') }}"></script>
        <script src="{{ asset('bundles/zacacia/js/zacacia.js') }}"></script>
        {% block javascripts %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <!-- BEGIN Header -->
        <header class="row">
            <div class="col-xs-12">
                <a class="navbar-brand" rel="home" href="{{ path('zacacia_homepage') }}" title="homepage">
                    <object class="img-responsive" id="front-page-logo" type="image/png" data="{{ asset('bundles/zacacia/images/zacacia_w.png') }}">Your browser does not support PNG</object>
                </a>
            </div>
        </header>
        <!-- END Header -->

        <!-- BEGIN Main column -->
        <main id="main" class="container-fluid">
            <div class="row">
        
                <!-- BEGIN Aside -->
                <aside id="zacacia-menu" class="col-md-2 col-md-push-0">
                    <div class="btn-group-vertical" role="group">
                    {%block nav_menu %}{% endblock %}
                    <button type="button" class="btn btn-logout btn-lg btn-block">Logout</button>
                    </div>
                </aside>
                <!-- END Aside -->
        
                <!-- BEGIN Section -->
                <section id="zacacia-content" class="col-md-10 col-md-push-2">
                    {% block main %}{% endblock %}
                </section>
                <!-- END Section -->
        
            </div>
        
        </main>
        <!-- END Main column -->
        
        <!-- BEGIN Footer -->
        <footer class="row">
            <div class="col-md-12">
            {% block footer %}{% endblock %}
            </div>
        </footer>
        <!-- END Footer -->
        
        <!-- Compiled and minified JavaScript -->
        <script src="{{ asset('bundles/zacacia/vendor/jquery/jquery.min.js') }}"></script>
        <script src="{{ asset('bundles/zacacia/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
        {# % block javascripts %}{% endblock % #}
    </body>
</html>
